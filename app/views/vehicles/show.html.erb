<%= link_to "Delete Vehicle", @vehicle, method: :delete %><br />

<%= @vehicle.vehicle_make %>
<%= @vehicle.vehicle_model %>
<%= @vehicle.vehicle_model_year %>
<%= @vehicle.vehicle_trim %>
<%= @vehicle.vehicle_style %><br />

<%= link_to "Add To Record", new_vehicle_maintenance_path(@vehicle, @maint) %>

<% @vehicle.maintenances.each do |maint| %><br />
	<br />Maintenance Category: <%= maint.maintenance_type %>
	<br />Date Performed: <%= maint.date.to_time.strftime('%B %e, %Y') %>
	<br />Shop: <%= maint.shop_name %>
	<br />Mileage: <%= maint.mileage %>
	<br / ><%= link_to "Delete Record", vehicle_maintenance_path(@vehicle, maint), method: :delete %>
<% end %>



